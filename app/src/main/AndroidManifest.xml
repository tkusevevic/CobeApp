<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tkusevic.CobeApp">

    <application
        android:name=".ui.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.LoginActivity"
            android:label="CobeApp"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WorkerActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.UserActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ui.RegistrationActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.ProductDetailsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.WorkerDetailsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.AddWorkerActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.AddProductActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>