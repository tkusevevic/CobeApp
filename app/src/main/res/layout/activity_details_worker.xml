<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:background="@drawable/back"
            android:onClick="goBack" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="IME RADNIKA"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/name_worker_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="PREZIME RADNIKA"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/lastname_worker_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ULOGA RADNIKA"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/type_worker_view"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="PLAÄ†A RADNIKA"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/salary_worker_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="saveWorker"
            android:text="SAVE"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>
