<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tkusevic.CobeApp.ui.UserActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:background="@drawable/receipt"
            android:onClick="showRecepts" />


        <Button
            android:layout_alignParentRight="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:background="@drawable/sign_out"
            android:onClick="signOut" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="#FFFFFF">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/reciepeView"
            android:background="@drawable/my_border" />

        <Button
            android:id="@+id/deleteAllBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="30dp"
            android:background="@drawable/x_icon"
            android:backgroundTint="@color/colorPrimaryDark"
            android:onClick="deleteAllFromReciepe" />

        <EditText
            android:id="@+id/reciepeView"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="#FFFF"
            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp" />

        <TextView
        android:id="@+id/priceView"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="60dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textAlignment="center" />

        <TextView
            android:id="@+id/HRK"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="10dp"
            android:text="HRK"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textAlignment="textEnd" />


        <Button
            android:id="@+id/getReciepeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="getReciepe"
            android:text="@string/naplati"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/reciepe_frame_layoutt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewReceipt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/closeRecipesView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="16dp"
            android:background="@drawable/x_icon"
            android:backgroundTint="@color/colorPrimaryDark"
            android:onClick="closeRecipesView" />
    </FrameLayout>
</RelativeLayout>
